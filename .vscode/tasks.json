{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${env:CSPECT}/snasm.exe",
            "args": [
                "-dIS_NEX",
                "-map",
                "-next",
                "-sound",
                "player.s",
                "speedball.out"
            ],
            "presentation": {
                "clear": true 
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run nex",
            "type": "shell",
            "command": "${env:CSPECT}/CSpect.exe",
            "args": [
                "-w6",
                "-zxnext",
                "-debug",
                "-rewind",
                "-brk",
                "-sound",
                "-mmc=${workspaceFolder}\\",
                "-map=${workspaceFolder}\\speedball.out.map",
                "${workspaceFolder}\\speedball.nex"
            ],
            "problemMatcher": []
        }

        {
            "label": "compile objects.c",
            "type": "shell",
            "command": "zcc",
            "args": [
                "+zxn",
                "-vn",
                "-m",
                "${workspaceFolder}\\objects.c",
                "-o"
                "${workspaceFolder}\\objects.asm",
                "-subtype=nex",
                "-S",
                "--c-code-in-asm",
                "-SO1",
                "-O1"
            ],
            "problemMatcher": []

        }
    ]
}
